<%- model_class = Dependente -%>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <p id="notice"><%= notice %></p>
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:codigo) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @dependente.codigo %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:participante) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @dependente.participante.nome %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:nome) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @dependente.nome %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:sexo) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @dependente.sexo_i18n if @dependente.sexo %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:data_nascimento) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @dependente.data_nascimento.present? ? l(@dependente.data_nascimento, format: :data_ddmmyy) : @dependente.data_nascimento %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:parentesco) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @dependente.parentesco_i18n if @dependente.parentesco %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:invalido) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= t @dependente.invalido.to_s unless @dependente.invalido.nil? %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <div class="col-sm-4">
                            <%= link_to edit_dependente_path(@dependente), class: 'btn btn-primary' do %>
                                Editar
                            <% end %>
                            <%= link_to 'Voltar', dependentes_path, :class => 'btn btn-white' %>
                            <%= link_to 'Novo', new_dependente_path, :class => 'btn btn-warning' %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>