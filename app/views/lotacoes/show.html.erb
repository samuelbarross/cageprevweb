<%- model_class = Lotacao -%>
<h1>Dados Lotações</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <p id="notice"><%= notice %></p>
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:codigo) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @lotacao.codigo %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                            <%= model_class.human_attribute_name(:descricao) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @lotacao.descricao %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4">
                            <%= link_to edit_lotacao_path(@lotacao), class: 'btn btn-primary' do %>
                            Editar
                            <% end %>
                            <%= link_to 'Voltar', lotacoes_path, :class => 'btn btn-white' %>
                            <%= link_to 'Novo', new_lotacao_path, :class => 'btn btn-warning' %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
