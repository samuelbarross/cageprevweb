                    <!-- Dependentes -->
                    <div id="tab-2" class="tab-pane">
                        <div class="panel-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th><%= model_class_dependente.human_attribute_name(:id) %></th>
                                        <th><%= model_class_dependente.human_attribute_name(:codigo) %></th>
                                        <th><%= model_class_dependente.human_attribute_name(:nome) %></th>
                                        <th><%= model_class_dependente.human_attribute_name(:sexo) %></th>
                                        <th><%= model_class_dependente.human_attribute_name(:data_nascimento) %></th>
                                        <th><%= model_class_dependente.human_attribute_name(:parentesco) %></th>
                                        <th><%= model_class_dependente.human_attribute_name(:invalido) %></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @dependentes.each do |ff| %>
                                        <tr class="fields">
                                            <td><%= ff.id %></td>
                                            <td><%= ff.codigo %></td>
                                            <td><%= ff.nome %></td>
                                            <td><%= ff.sexo_i18n if ff.sexo %></td>
                                            <td><%= l(ff.data_nascimento, format: :data_ddmmyy) if ff.data_nascimento %></td>
                                            <td><%= ff.parentesco_i18n if ff.sexo %></td>
                                            <td><%= t ff.invalido.to_s unless ff.invalido.nil? %></td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Imagens -->
                    <div id="tab-3" class="tab-pane">
                        <div class="panel-body">
                            <div class="lightBoxGallery" style="text-align: left">
                                <% @imagens.each do |ff| %>
                                    <% if ff.images_content_type == "application/pdf" %>
                                        <div class="file-box">
                                            <div class="file">
                                                <a href="#">
                                                    <span class="corner"></span>

                                                    <div class="icon">
                                                        <i class="fa fa-file"></i>
                                                    </div>
                                                    <div class="file-name">
                                                        <%= link_to ff.images_file_name, ff.images.url, class: "fa fa-download", target: '_blank'  %>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    <% else %>
                                        <a href="<%= image_path(ff.images.url) %>" title="Imagem" data-gallery="" download="<%= ff.images_file_name %>"><%= image_tag(ff.images.url(:thumb), size: "160x160") %></a>
                                    <% end %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
