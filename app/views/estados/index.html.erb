<%- model_class = Estado -%>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>estados</h2>
        <ol class="breadcrumb">
            <li><a href="<%= url_for :controller => 'home', :action => 'index' %>">Home</a></li>
            <li class="active"><strong>estados</strong></li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>
<p id="notice"><%= notice %></p>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <%= link_to '', new_estado_path, class: 'fa fa-plus', title: 'NOVO' %>
                <div class="ibox-tools">
                    <a href="#modal-form" data-toggle="modal" class="fa fa-search" ></a>
<!--                     <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a> -->
                    <div class="modal inmodal" id="modal-form" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <%= search_form_for @search, url: search_estados_path, method: :get do |f| %>
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title">Pesquisa</h4>
                                </div>
                                <div class="modal-body">
                                    <%= f.condition_fields do |c| %>
                                    <%= render "condition_fields", f: c %>
                                    <% end %>
                                    <p><%= link_to_add_fields "Adicionar condições", f, :condition %></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                                    <%= f.submit "Procurar", class: "btn btn-primary" %>
                                </div>
                            </div>
                            <% end %>
                        </div>
                    </div>
                    <%= link_to "#modal-importar-txt", data: { toggle: "modal" }, class: 'btn btn-xs', style: "color: #0072FF;", title: 'Importar Txt' do %>
                        <span class="fa fa-upload"></span>
                    <% end %>
                </div>
            </div>
            <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover data-table" >
                    <thead>
                        <tr>
                            <th width="02%"></th>
                            <th width="02%"></th>
                            <th width="02%"></th>
                            <th><%= model_class.human_attribute_name(:id) %></th>
                            <th><%= model_class.human_attribute_name(:codigo) %></th>
                            <th><%= model_class.human_attribute_name(:descricao) %></th>
                            <th><%= model_class.human_attribute_name(:uf) %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%= content_tag_for(:tr, @estados) do |estado| %>
                        <td><%= link_to '', estado, class: "btn btn-xs fa fa-search"%></td>
                        <td><%= link_to '', edit_estado_path(estado), class: "btn btn-xs fa fa-paste" %></td>
                        <td><%= link_to '', estado, class: "btn btn-xs fa fa-times", method: :delete, data: { confirm: 'Confirma Exclusão ?' } %></td>
                        <td><%= estado.id %></td>
                        <td><%= estado.codigo %></td>
                        <td><%= estado.descricao %></td>
                        <td><%= estado.uf %></td>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%= render("modal_importar_txt") %>