<%= simple_form_for(@estado, html: { class: "form-horizontal", role: "form", name: "form" }) do |f| %>
    <%= f.error_notification %>
    <div class="row">
        <div class="ibox-content">
            <%= f.input :descricao, as: :string,  wrapper: :horizontal_form %>
            <div class="hr-line-dashed"></div>
            <%= f.input :codigo, as: :string,  wrapper: :horizontal_form %>
            <div class="hr-line-dashed"></div>
            <%= f.input :uf, as: :string,  wrapper: :horizontal_form %>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="col-sm-4">
                    <%= f.submit "Salvar", :class => 'btn btn-primary' %>
                    <%= link_to 'Voltar', estados_path, :class => 'btn btn-white' %>
                </div>
            </div>
        </div>
    </div>
<% end %>